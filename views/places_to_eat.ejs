<%- include("components/header") -%>

    <div class=" featuredDestinations my-4 text-center">
        <hr class="half-hr"> <h2 class="inline-block"> Places to Eat</h2> <hr class="half-hr">
      </div>

    <div class="container">
    <div class="row text-center">
        <% for(let i=0; i<result.length; i++){%>
        <div class="col-lg-4 col-md-6 col-sm-12 pb-3">
            <a href="/eatDetail/<%=result[i].id%>" class="destinationCardLink">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%=result[i].image%>" alt="<%=result[i].name%>">
                <div class="card-body">
                <h4 class="card-text"><%=result[i].name%></h4>
                <div class="row">
                    <div class="col-12">
                        <%=result[i].star%>
                        <% for(let a=0; a<result[i].star; a++){%>
                            <img src="/images/icons/star.png" width="10px" alt="...">
                        <%}%>
                        <% if(result[i].star < 5){%>
                            <% for(let a=0; a<5 - result[i].star; a++){%>
                                <img src="/images/icons/outlineStar.png" width="10px" alt="...">
                            <%}%>
                        <%}%>
                        . Restaurant
                    </div>
                    
                </div>
                <p><%=result[i].features%></p>
                </div>
            </div>
            </a>
        </div>
        <%}%>
    </div>
    </div>

<%- include("components/footer") -%>
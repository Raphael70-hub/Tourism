<%- include("components/header") -%>

    <div class=" featuredDestinations my-4 text-center">
        <hr class="half-hr"> <h2 class="inline-block"> Places to Stay</h2> <hr class="half-hr">
      </div>

    <div class="container">
    <div class="row">
        <% for(let i=0; i<result.length; i++){%>

            <div class="col-lg-4 col-md-6 col-sm-12 pb-3">
                <a href="/accomodationDetail/<%=result[i].id%>" class="destinationCardLink">
                <div class="card" style="width: 18rem;">
                    <!-- <img class="card-img-top" src="<%=result[i].image%>" alt="<%=result[i].name%>"> -->
                    <div id="carouselExampleSlidesOnly" class="carousel carousel-fade" data-bs-ride="carousel" data-bs-interval="3000" style="height: 200px;">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img src="<%=result[i].image1%>" class="card-img-top d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="<%=result[i].image2%>" class="card-img-top d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="<%=result[i].image3%>" class="card-img-top d-block w-100" alt="...">
                          </div>
                        </div>
                      </div>

                    <div class="card-body">
                        <div class="row">
                            <h5 class="card-title col-8"><%=result[i].name%></h5>
                            <p class="card-text ml-auto col-4">â‚¦<%=result[i].price%></p>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <% for(let a=0; a<result[i].star; a++){%>
                                    <img src="/images/icons/star.png" width="10px" alt="...">
                                <%}%>
                                <% if(result[i].star < 5){%>
                                    <% for(let a=0; a<5 - result[i].star; a++){%>
                                        <img src="/images/icons/outlineStar.png" width="10px" alt="...">
                                    <%}%>
                                <%}%>
                            </div>
                            <div class="col-6">
                                <p><%=result[i].star%>-star hotel</p>
                            </div>
                        </div>
                        <p><%=result[i].features%></p>
                    </div>
                </div>
                </a>
            </div>

        <%}%>
    </div>
    </div>

<%- include("components/footer") -%>